<h1>Registrations#new</h1>
<h1>Sign Up</h1>

  <%= form_for @user, url: sign_up_path do |f| %>
    <p>
    <%= f.label 'name' %><br>
    <%= f.text_field :name %>
    </p>
    <p>
    <%= f.label 'email' %><br>
    <%= f.text_field :email %>
    </p>
    <p>
    <%= f.label 'password' %><br>
    <%= f.password_field :password %>
    </p>
    <p>
    <%= f.submit 'Sign Up' %>
    </p>
  <% end %>